#!/usr/bin/env bash
# Wrapper: runs the klaw CLI inside Docker, sharing engine socket and workspace.
# Usage: ./klaw status
#        ./klaw memory show
COMPOSE_FILE="${XDG_CONFIG_HOME:-$HOME/.config}/klaw/docker-compose.json"
if [ ! -f "$COMPOSE_FILE" ]; then
  echo "No docker-compose.json found. Run 'klaw init' first." >&2
  exit 1
fi
docker compose -f "$COMPOSE_FILE" run --rm cli "$@"
