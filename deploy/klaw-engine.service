[Unit]
Description=Klaw Engine
Documentation=https://github.com/klaw-project/klaw
After=network.target

[Service]
Type=simple
Environment=HOME=%h
ExecStart=/usr/bin/java -Xms64m -Xmx512m -jar %h/.local/share/klaw/bin/klaw-engine.jar
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=klaw-engine

[Install]
WantedBy=default.target
